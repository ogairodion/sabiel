    "jquery": "^3.5.1",
    "require-yaml": "0.0.1",
    "swiper": "^6.2.0",
    "vanilla-lazyload": "^17.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(_*).scss": [
      "stylelint --fix --color --config ./.stylelintrc"
    ],
    "*.js": [
      "eslint --fix --color"
    ]
  }
